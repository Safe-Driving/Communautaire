<h2>Affichage des trois derniers Topics</h2>

<% @topics.each do |topic| %>

    <h3><%= topic.title %></h3>
    <p><%= topic.description %></p>
    <p><%= topic.category.name %></p>

	<p class="infopost">

		<%= link_to "Voir l'article complet", topic_path(topic.id) %><br/>
		de :  <%= topic.user.pseudo %> le : <%= topic.created_at %>
	</p>

    <hr />

<% end %>